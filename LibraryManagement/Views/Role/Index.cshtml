@{
}
@model List<RoleViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role ismi</th>
            <th> <a class="btn btn-dark btn-sm my-1" asp-controller="role" asp-action="create">Rol Oluştur</a></th>

        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-dark btn-sm" asp-controller="role" asp-action="RoleUpdate" asp-route-id="@item.Id">Rol güncelle</a>

                    <a class="btn btn-dark btn-sm my-1" asp-controller="role" asp-action="DeleteRole" asp-route-id="@item.Id">Rol sil</a>
                   
                </td>

            </tr>
        }
    </tbody>
</table>
