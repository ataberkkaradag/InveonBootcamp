@model UserViewModel



<form asp-action="UpdateUser" method="post">
    <div class="form-group">
        <label type="email" asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputRole" placeholder="Email">

    </div>
    <div class="form-group">
        <label type="text" asp-for="UserName">Username</label>
        <input asp-for="UserName" type="text" class="form-control" id="exampleInputUsername" placeholder="Username">

    </div>
    

    <button type="submit" class="btn btn-primary">Submit</button>
</form>