@using LibraryManagement.Models.ViewModels

@model CreateUserViewModel
    


@{
}
<h2 class="fw-bold mb-3">Yeni Hesap Oluştur</h2>
<form method="post" asp-action="Register">

   
    <div class="form-group mb-3">
        <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <input asp-for="Password" class="form-control" placeholder="Şifre" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
   
    

    <button type="submit" class="btn btn-success  w-100">Yeni hesap oluştur</button>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

</form>

<div class="text-center my-3">
    <span class="mt-3 text-muted fw-bold ">
        Zaten üye misiniz? <a asp-action="Login" class="text-black text-decoration-none px-2"> <i class="bi bi-box-arrow-in-right"></i> Giriş</a>
    </span>
</div>

